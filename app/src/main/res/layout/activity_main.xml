<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.MainActivity">

        <ImageView
            android:id="@+id/img_main_profile"
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            tools:src="@drawable/ic_github_logo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_main_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/img_main_profile"
            app:layout_constraintEnd_toEndOf="@+id/img_main_profile"
            app:layout_constraintStart_toStartOf="@+id/img_main_profile"
            tools:text="Github ID: l2hyunwoo" />

        <TextView
            android:id="@+id/txt_main_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Android Developer"
            app:layout_constraintTop_toBottomOf="@+id/txt_main_id"
            app:layout_constraintEnd_toEndOf="@+id/txt_main_id"
            app:layout_constraintStart_toStartOf="@+id/txt_main_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>